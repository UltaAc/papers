<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="PpsPropertiesLicense" parent="AdwBin">
    <child>
      <object class="AdwClamp">
        <property name="child">
          <object class="GtkBox">
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox" id="license_box">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Usage Terms</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="heading" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="min-content-height">150</property>
                    <property name="has-frame">True</property>
                    <property name="child">
                      <object class="GtkLabel" id="license">
                        <property name="wrap">True</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="selectable">True</property>
                        <property name="margin-start">12</property>
                        <property name="xalign">0</property>
                        <style>
                          <class name="body" />
                          <class name="link" />
                        </style>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="uri_box">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Text License</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="heading" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="uri">
                    <property name="margin-start">12</property>
                    <property name="selectable">True</property>
                    <property name="ellipsize">end</property>
                    <property name="width-chars">25</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="body" />
                      <class name="link" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="web_statement_box">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Further Information</property>
                    <property name="xalign">0</property>
                    <property name="yalign">0.5</property>
                    <style>
                      <class name="heading" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="web_statement">
                    <property name="margin-start">12</property>
                    <property name="selectable">True</property>
                    <property name="ellipsize">end</property>
                    <property name="width-chars">25</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="body" />
                      <class name="link" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
